{
  "name": "bookwormz-api",
  "version": "1.0.0",
  "description": "backend and passport for Bookwormz project",
  "main": "app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "server": "cross-env NODE_ENV=development nodemon app",
    "client": "npm start --prefix bookwormz",
